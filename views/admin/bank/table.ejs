<table id="example2" class="table table-bordered table-hover w-100">
  <thead>
    <tr>
      <th>No</th>
      <th>Nama Pemilik</th>
      <th>Nama Bank</th>
      <th>No. Rekening</th>
      <th>Aksi</th>
    </tr>
  </thead>
  <tbody>
    <% for (let i=0; i < bank.length; i++) { %>
      <tr>
        <td class="align-middle">
          <%= i + 1 %>
        </td>
        <td class="align-middle">
          <%= bank[i].ownerName %>
        </td>
        <td class="align-middle">
          <%= bank[i].bankName %>
        </td>
        <td class="align-middle">
          <%= bank[i].accountNumb %>
        </td>
        <td>
          <form action="/bank/delete/<%= bank[i]._id %>?_method=DELETE" method="POST">
            <a href="/bank/edit/<%= bank[i]._id %>" class="btn btn-info btn-sm" data-placement="top"
              title="Edit Bank">
              <i class="fas fa-pencil-alt"></i>
            </a>
            <button type="submit" class="btn btn-danger btn-sm" data-toggle="tooltip" data-placement="top"
              title="Hapus Bank">
              <i class="fas fa-trash"></i>
            </button>
          </form>
        </td>
      </tr>
      <% } %>
  </tbody>
</table>